{
  "name": "@nexcraft/forge",
  "version": "0.1.0",
  "type": "module",
  "description": "A production-ready, framework-agnostic UI component library built with Web Components and Lit, designed to work seamlessly across React, Vue, Angular, and vanilla JavaScript applications.",
  "main": "./dist/nexcraft-forge.es.js",
  "module": "./dist/nexcraft-forge.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "custom-elements.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nexcraft-forge.es.js",
      "require": "./dist/nexcraft-forge.umd.js"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*",
      "require": "./dist/*"
    },
    "./custom-elements.json": "./custom-elements.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/*/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:manifest": "custom-elements-manifest analyze",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,css,html}",
    "analyze": "custom-elements-manifest analyze",
    "bundle-analyze": "rollup-plugin-visualizer",
    "generate:component": "node scripts/generate-component.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-ignis/forge.git"
  },
  "keywords": [
    "web-components",
    "ui-library",
    "design-system",
    "custom-elements",
    "shadow-dom",
    "lit",
    "theming",
    "css-custom-properties"
  ],
  "author": "Ignis Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-ignis/forge/issues"
  },
  "homepage": "https://github.com/dev-ignis/forge#readme",
  "dependencies": {
    "lit": "^3.0.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.34.0",
    "@happy-dom/global-registrator": "^18.0.1",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/web-components-vite": "^9.1.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-plugin-storybook": "^9.1.3",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "storybook": "^9.1.3",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  }
}
