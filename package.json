{
  "name": "@nexcraft/forge",
  "version": "0.5.2-beta.21",
  "type": "module",
  "description": "The FIRST AI-Native component library built for the age of AI-assisted development. Features built-in AI metadata, design token bridge, and real-time performance monitoring. Works seamlessly across React, Vue, Angular, and vanilla JavaScript with AI coding tools like Cursor, GitHub Copilot, and Claude.",
  "main": "./dist/nexcraft-forge.es.js",
  "module": "./dist/nexcraft-forge.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "custom-elements.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/integrations/",
    "docs/guides/",
    "docs/components/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nexcraft-forge.es.js",
      "require": "./dist/nexcraft-forge.umd.js"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*",
      "require": "./dist/*"
    },
    "./integrations/react": {
      "types": "./dist/integrations/react/index.d.ts",
      "import": "./dist/integrations/react/index.js"
    },
    "./integrations/vue": {
      "types": "./dist/integrations/vue.d.ts",
      "import": "./dist/integrations/vue.js"
    },
    "./integrations/angular": {
      "types": "./dist/integrations/angular.d.ts",
      "import": "./dist/integrations/angular.js"
    },
    "./integrations/rhf": {
      "types": "./dist/integrations/react/rhf/index.d.ts",
      "import": "./dist/integrations/react/rhf/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./dist/plugin/index.js"
    },
    "./button": {
      "types": "./dist/exports/button.d.ts",
      "import": "./dist/exports/button.js"
    },
    "./input": {
      "types": "./dist/exports/input.d.ts",
      "import": "./dist/exports/input.js"
    },
    "./checkbox": {
      "types": "./dist/exports/checkbox.d.ts",
      "import": "./dist/exports/checkbox.js"
    },
    "./select": {
      "types": "./dist/exports/select.d.ts",
      "import": "./dist/exports/select.js"
    },
    "./alert": {
      "types": "./dist/exports/alert.d.ts",
      "import": "./dist/exports/alert.js"
    },
    "./card": {
      "types": "./dist/exports/card.d.ts",
      "import": "./dist/exports/card.js"
    },
    "./modal": {
      "types": "./dist/exports/modal.d.ts",
      "import": "./dist/exports/modal.js"
    },
    "./types/framework-integration": {
      "types": "./dist/types/framework-integration.d.ts"
    },
    "./custom-elements.json": "./custom-elements.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/*/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
      "build": "vite build && npm run build:types && npm run bundle:types && npm run cleanup:types && npm run build:ai && npm run build:exports",
    "build:types": "tsc --emitDeclarationOnly",
    "bundle:types": "rollup -c rollup.dts.config.js && mv dist/index.bundled.d.ts dist/index.d.ts",
    "cleanup:types": "node scripts/cleanup-types.js",
    "build:ai": "node scripts/generate-ai-manifest.js",
    "build:exports": "node scripts/build-exports.cjs",
    "build:manifest": "custom-elements-manifest analyze",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "format": "prettier --write src/**/*.{ts,css,html}",
    "validate:ai": "node scripts/validate-ai-manifest.js",
    "analyze": "custom-elements-manifest analyze",
    "bundle-analyze": "rollup-plugin-visualizer",
    "generate:component": "node scripts/generate-component.js",
    "example:install": "cd examples/nextjs-app && npm install",
    "example:dev": "cd examples/nextjs-app && npm run dev",
    "example:build": "npm run build && cd examples/nextjs-app && npm run build",
    "example:start": "cd examples/nextjs-app && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-ignis/forge.git"
  },
  "keywords": [
    "ai-native",
    "ai-metadata",
    "ai-assisted-development",
    "web-components",
    "ui-library",
    "design-system",
    "custom-elements",
    "shadow-dom",
    "lit",
    "theming",
    "css-custom-properties",
    "cursor",
    "github-copilot",
    "claude",
    "performance-monitoring",
    "design-tokens"
  ],
  "author": "Ignis Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-ignis/forge/issues"
  },
  "homepage": "https://github.com/dev-ignis/forge#readme",
  "dependencies": {
    "lit": "^3.0.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0",
    "react-hook-form": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.34.0",
    "@happy-dom/global-registrator": "^18.0.1",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/web-components-vite": "^9.1.3",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-plugin-storybook": "^9.1.3",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "rollup-plugin-dts": "^6.2.3",
    "storybook": "^9.1.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  }
}
