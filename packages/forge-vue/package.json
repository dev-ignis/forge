{
  "name": "@nexcraft/forge-vue",
  "version": "0.3.0",
  "description": "Vue integration for Nexcraft Forge web components",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./directives": {
      "types": "./dist/directives/index.d.ts",
      "import": "./dist/directives/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@nexcraft/forge": ">=0.8.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "web-components",
    "forge",
    "ui-components",
    "custom-elements",
    "composables"
  ],
  "author": "Nexcraft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-ignis/forge.git",
    "directory": "packages/forge-vue"
  },
  "publishConfig": {
    "access": "public"
  }
}