{
  "name": "@nexcraft/forge-rhf",
  "version": "0.3.0",
  "type": "module",
  "description": "React Hook Form adapters for @nexcraft/forge components",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@nexcraft/forge": ">=0.7.1",
    "@nexcraft/forge-react": ">=0.1.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.45.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "react": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-ignis/forge.git",
    "directory": "packages/forge-rhf"
  },
  "keywords": [
    "react-hook-form",
    "nexcraft",
    "forge",
    "form-adapters",
    "react",
    "web-components",
    "form-validation",
    "typescript",
    "monorepo"
  ],
  "author": "Ignis Team",
  "license": "MIT"
}
