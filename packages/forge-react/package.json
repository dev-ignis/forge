{
  "name": "@nexcraft/forge-react",
  "version": "1.0.4",
  "description": "React integration for Nexcraft Forge web components",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./ssr": {
      "types": "./dist/ssr/index.d.ts",
      "import": "./dist/ssr/index.js"
    },
    "./fallbacks.css": "./src/fallbacks.css"
  },
  "files": [
    "dist/",
    "src/fallbacks.css",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node scripts/add-use-client.js",
    "dev": "tsc -p tsconfig.build.json --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "forge",
    "nexcraft",
    "react",
    "web-components",
    "ui",
    "components",
    "design-system"
  ],
  "author": "Nexcraft Team",
  "license": "MIT",
  "peerDependencies": {
    "@nexcraft/forge": ">=0.9.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "glob": "^11.0.3",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-ignis/forge.git",
    "directory": "packages/forge-react"
  },
  "bugs": {
    "url": "https://github.com/dev-ignis/forge/issues"
  },
  "homepage": "https://forge.nexcraft.io"
}
