{
  "extends": "next/core-web-vitals",
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "process": "readonly",
    "localStorage": "readonly",
    "alert": "readonly"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-undef": "error",
    "react/no-unescaped-entities": "warn",
    "@next/next/no-html-link-for-pages": "warn"
  }
}